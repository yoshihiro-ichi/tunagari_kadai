<h1>つぶやき一覧</h1>
<table>
  <tr>
    <th>つぶやき</th>
  </tr>
  <% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><%= link_to '詳細を確認する', post_path(post.id) %></td>
    <td><%= link_to "つぶやきを編集する", edit_post_path(post.id),data:{ confirm: '本当に編集していいですか？' } %></td>
    <td><%= link_to 'つぶやきを削除する', post_path(post.id), method: :delete,data:{ confirm: '本当に削除していいですか？' } %></td>
  </tr>
  <% end %>
</table>
<p><%= link_to 'つぶやき一覧画面に戻る', posts_path %></p>
<p><%= link_to '新規投稿', new_post_path %></p>
